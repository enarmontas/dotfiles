# private configs
Include ~/.ssh/config.private

# northbox1 host
Host northbox1
    HostName northbox1-ip-placeholder
    User northbox1-user-placeholder
    IdentityFile ~/.ssh/ernestas_id_ed25519

# all hosts
Host *
    # Platform-agnostic settings
    AddKeysToAgent yes

    # macOS-specific (ignored on Linux)
    IgnoreUnknown UseKeychain
    UseKeychain yes

    # Default key
    IdentityFile ~/.ssh/id_ed25519

    # Connection settings
    ServerAliveInterval 60
    ServerAliveCountMax 3
